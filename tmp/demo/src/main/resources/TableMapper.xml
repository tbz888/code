<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.TableMapper">
    <resultMap id="model" type="mybatis.Model">
        <result property="id" column="id" javaType="java.lang.Integer"></result>
        <result property="name" column="name" javaType="java.lang.String"></result>
    </resultMap>
    <insert id="insert_t2" useGeneratedKeys="true">
         insert into tbz (id, name) values (#{id}, #{name});
    </insert>

    <insert id="insert_foreach" parameterType="java.util.ArrayList">
        insert into tbz values
        <foreach collection="ids" item="id" index="index"
                 separator=",">
        (#{id}, "night_test")
        </foreach>
    </insert>

    <select id="query_all" parameterType="int" resultMap="model">
        select id, name from tbz
<where>
    <choose>
        <when test="id == 1">
            AND id = 1
        </when>
        <when test="id == 2">
            AND id = 2
        </when>
        <otherwise>
            AND id = 999
        </otherwise>
    </choose>
</where>
    </select>

    <select id="query" parameterType="int" resultMap="model">
        select id, name from tbz
        <where>
            <if test="id ==2">
                and id=1
            </if>
        </where>
    </select>
</mapper>